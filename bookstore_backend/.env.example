# Security
SECRET_KEY=CHANGE_ME_DEV_SECRET
ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_ALGORITHM=HS256

# Database
# For SQLite (default), a file named bookstore.db will be created in the working directory.
# For Postgres, use: DATABASE_URL=postgresql+psycopg2://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=sqlite:///./bookstore.db

# CORS
# Comma-separated list of allowed origins.
# For development, you can set "*" to allow any origin.
# Example for preview/staging: https://preview-1234.example.app,https://staging.example.com
ALLOW_ORIGINS=*
